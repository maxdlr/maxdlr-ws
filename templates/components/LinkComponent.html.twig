<div{{ attributes.defaults(stimulus_controller('link')) }} class="link-component swing-top">

    {#    https://symfony.com/bundles/ux-twig-component/current/index.html#component-attributes #}
    <div class="bg-grad-prim-accent mb-2 rounded-4 px-3 py-2">
        <h2 class="link-title-font ps-2 fs-4 text-light">
            <i class="bi bi-arrow-right"></i>
            {{ title }}
        </h2>
        <div>
            <div class="w-100 bg-light h-1px rounded-pill my-2"></div>
            <div class="description">
                <div class="text-font">
                    {{ description }}
                </div>
            </div>
            <div>
                <p class="fst-italic text-end text-font text-decoration-underline">See it.</p>
            </div>
        </div>
    </div>
</div>
